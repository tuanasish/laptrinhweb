                <input type="email" name="Email" id="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Phone">Số điện thoại</label>
                <input type="text" name="Phone" id="Phone" class="form-control" />
            </div>
            <div class="form-group">
                <label for="HireDate">Ngày tuyển dụng</label>
                <input type="date" name="HireDate" id="HireDate" class="form-control" />
            </div>
            <div class="form-group">
                <label for="DepartmentId">Phòng ban</label>
                <input type="text" name="DepartmentId" id="DepartmentId" class="form-control" />
            </div>
            <div class="form-group">
                <label for="PositionId">Chức vụ</label>
                <input type="text" name="PositionId" id="PositionId" class="form-control" />
            </div>
        </form>
    </div>
</div>

