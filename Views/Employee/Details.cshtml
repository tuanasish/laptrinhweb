@model Web_APP_BTL.Models.Employee
<style>
    /* Container chi tiết nhân viên */
    .employee-detail-container {
        background-color: #f0faff;
        padding: 20px;
        border-radius: 10px;
        width: 450px;
        box-shadow: 0px 0px 15px rgba(0, 51, 102, 0.2);
        margin: auto;
    }

    /* Tiêu đề */
    .profile-header h2 {
        color: #004080;
        text-align: center;
        font-size: 1.8em;
        margin-bottom: 20px;
    }

    /* Thông tin chi tiết */
    .profile-info {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .info-group {
        display: flex;
        justify-content: space-between;
        padding: 8px 0;
        border-bottom: 1px solid #e0e0e0;
    }

        .info-group label {
            font-weight: bold;
            color: #003366;
            width: 40%;
        }

        .info-group span {
            color: #333;
            text-align: right;
            width: 60%;
        }

    /* Các nút hành động */
    .action-buttons {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

        .action-buttons .btn {
            width: 48%;
            padding: 10px;
            font-weight: bold;
            border-radius: 5px;
        }

    .btn-warning {
        background-color: #ffcc00;
        color: #ffffff;
        border: none;
    }

        .btn-warning:hover {
            background-color: #e6b800;
        }

    .btn-danger {
        background-color: #d9534f;
        color: #ffffff;
        border: none;
    }

        .btn-danger:hover {
            background-color: #c9302c;
        }

</style>
<div class="employee-detail-container">
    <div class="profile-header">
        <h2>Thông tin nhân viên</h2>
    </div>
    <div class="profile-info">
        <div class="info-group">
            <label>Mã nhân viên:</label>
            <span>@Model.EmpId</span>
        </div>
        <div class="info-group">
            <label>Tên nhân viên:</label>
            <span>@Model.EmpName</span>
        </div>
        <div class="info-group">
            <label>Số điện thoại:</label>
            <span>@Model.Phone</span>
        </div>
        <div class="info-group">
            <label>Email:</label>
            <span>@Model.Email</span>
        </div>
        <div class="info-group">
            <label>Ngày vào làm:</label>
            <span>@Model.HireDate.ToString("dd/MM/yyyy")</span>
        </div>
        <div class="info-group">
            <label>Phòng ban:</label>
            <span>@Model.Department.DepartmentName</span>
        </div>
        <div class="info-group">
            <label>Chức vụ:</label>
            <span>@Model.Position.PositionName</span>
        </div>
    </div>
    <div class="action-buttons">
        <button class="btn btn-warning" onclick="openEditOverlay(@Model.EmpId)">Cập nhật</button>
        <button class="btn btn-danger" onclick="openDeleteOverlay(@Model.EmpId, '@Model.EmpName')">Xóa nhân viên</button>
    </div>
</div>




