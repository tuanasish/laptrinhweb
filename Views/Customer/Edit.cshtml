
<div class="overlay" id="editCustomerOverlay">
    <div class="overlay-content">
        <h2 class="text-primary">Chỉnh sửa khách hàng</h2>

        <!-- Thêm AntiForgeryToken vào form -->
        <form id="editCustomerForm" class="customer-edit-form">
            @Html.AntiForgeryToken() <!-- Tạo input ẩn chứa token -->
            <input type="hidden" name="CustomerId" id="CustomerId" />
            <div class="form-group">
                <label for="CustomerName" class="form-label">Tên khách hàng</label>
                <input type="text" class="form-control" name="CustomerName" id="CustomerName" placeholder="Nhập tên khách hàng" />
                <span id="CustomerNameError" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ContactInfo" class="form-label">Thông tin liên hệ</label>
                <textarea class="form-control" name="ContactInfo" id="ContactInfo" placeholder="Nhập thông tin liên hệ"></textarea>
                <span id="ContactInfoError" class="text-danger"></span>
            </div>
            <div class="form-actions">
                <button type="button" class="btn btn-success" onclick="submitEditForm()">Lưu</button>
                <button type="button" class="btn btn-secondary" onclick="closeOverlay()">Đóng</button>
            </div>
        </form>
    </div>
</div>

